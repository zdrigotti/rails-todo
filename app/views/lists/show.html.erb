<div class="screen">
	<div class="card">
		<h2 class="header"><%= @list.name %></h2>
		<p class="sub-header"><%= @list.description %></p>

		<div>
			<%= render @list.items.sort_by { |item| item.complete ? 1 : 0 } %>
			<div id="form">
				<%= render "items/form" %>
			</div>
		</div>

		<div class="inline-flex mt-4">
			<%= link_to "Back", lists_path, class: "btn btn:hover inline-1" %>
			<%= link_to "Edit", edit_list_path(@list), class: "btn btn:hover inline-1 ml-2" %>
			<%= button_to "Delete", list_path(@list), method: :delete, class: "btn btn:hover inline-1 ml-2" %>
		</div>
	</div>
</div>